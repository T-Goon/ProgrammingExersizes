<!DOCTYPE html>
<html>
    
    <%- include('../common/head'); %>
  
    <body>
        <header>
            <%- include('../common/navbar'); %>

            <div class="container">
                <div class="row align-items-center">
                  <div class="col-md-6 order-md-1 text-center text-md-left pr-md-5">
                    <h1>Leads</h1>
            
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Email</th>
                            <th scope="col"> Actions</th>
                            <!-- Intentionally left blank -->
                            <th scope="col"></th> 
                        </tr>
                        </thead>
            
                        <tbody>
            
                        <% for(var i=0;i<leads.length; i++) {%>
            
                            <tr id=<%= leads[i].id %>>
                            <td><span><%= leads[i].email %></span></td>
                            <td><a href="/lead/<%= leads[i].id %>"> Details </a></td>
                            <td>
                                <button onclick="deleteLead('<%= leads[i].id %>')" class="btn btn-primary">Delete</button>
                            </td>
                            </tr>
                        <% } %>
            
                        </tbody>
                    </table>
                  
                  </div>
                </div>
            </div>
        </header>
        
        <%- include('../common/footer'); %>
        <script type="text/javascript" src="/javascripts/leads.js"></script>
    </body>
</html>