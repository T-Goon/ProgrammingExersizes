<!DOCTYPE html>
<html>
    
    <%- include('../common/head'); %>
  
    <body>
        <header>
            <%- include('../common/navbar'); %>

            <div class="container">
                <div class="row align-items-center">
                  <div class="col-md-6 order-md-1 text-center text-md-left pr-md-5">
                    <h1>Edit Lead</h1>
                    <form action="/lead/<%= lead.id %>/edit" method="POST">
                      <div class="input-group mb-3">
                        <input name="lead_email" type="email" placeholder="Enter Your Email" value="<%= lead.email %>"
                        class="form-control" required>
                        <div class="input-group-append">
                          <button type="submit" class="btn btn-primary"> Save </button>
                        </div>
                      </div>
                    </form>
                  
                  </div>
                </div>
            </div>
        </header>
        
        <%- include('../common/footer'); %>
        <script type="text/javascript" src="/javascripts/leads.js"></script>
    </body>
</html>